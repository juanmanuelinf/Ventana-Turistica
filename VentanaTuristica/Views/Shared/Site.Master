            </div>
              
            <div id="logindisplay">
                <% Html.RenderPartial("Services"); %>
            </div> 
            
            <div id="menucontainer">
                <% Html.RenderAction("Categorias","Categorium");%>
            </div>        
        </div>
        
        <div id="main3">
        <div class="page3">
            <div class="marco">
                <div class="marcoIzquierdo"><img src="../../Content/marcoPrincipal2.jpg" /></div>
                <div class="marcoDerecho"><img src="../../Content/marcoPrincipal.jpg" /></div>
            </div>
        </div>
        </div>
        <div class="page">
            
            <div id="main">
                  
                <asp:ContentPlaceHolder ID="MainContent" runat="server"/>
                <div class="bl3"><div class="br3"><div class="tl3"><div class="tr3">
                </div></div></div></div>

                <!-- root element for scrollable -->
                <div class="scrollable" id="scroller">   
   
                   <!-- root element for the items -->
                   <div class="items" style="left: -2040px; ">
                        <% Html.RenderAction("Sponsors","Patrocinante");%>
