        <div id="footer">

            <div id="footerMountain">
                <img src="../../Content/footerMountain.png" />
            </div>
            <br /><br />
            Ventana Turistica &copy;
        </div>
    
</body>

    <!-- javascript coding -->
    <script type="text/javascript">
        jQuery.noConflict();
        jQuery(document).ready(function () {
            var root = jQuery("#scroller").scrollable({ circular: true }).autoscroll({ autoplay: true });
            window.api = root.data("scrollable");
        });
        window.onresize = fillWindow;
        function fillWindow() {

            var mapDiv = document.getElementById("header");
            var ancho = 0;
            try {
                if (window.innerHeight) { //if browser supports window.innerWidth
                    // mapDiv.style.height = window.innerHeight + 'px';
                    ancho = eval(window.innerWidth);
                    if (ancho < 1240)
                        ancho = 1240

                    mapDiv.style.width =  ancho + 'px';
                   
                }
                else {	//MSIE
                    document.body.scroll = "no";
                    //  mapDiv.style.height = document.body.clientHeight + 'px';
                    ancho = eval(document.body.clientWidth);
                    if (ancho < 1240)
                        ancho = 1240

                    mapDiv.style.width = ancho + 'px';

                }
                
            }
            catch (ex) {
            }
            mapDiv = document.getElementById("footer");
            ancho = 0;
            try {
                if (window.innerHeight) { //if browser supports window.innerWidth
                    // mapDiv.style.height = window.innerHeight + 'px';
                    ancho = eval(window.innerWidth);
                    if (ancho < 1240)
                        ancho = 1240

                    mapDiv.style.width = ancho + 'px';

                }
                else {	//MSIE
                    document.body.scroll = "no";
                    //  mapDiv.style.height = document.body.clientHeight + 'px';
                    ancho = eval(document.body.clientWidth);
                    if (ancho < 1240)
                        ancho = 1240

                    mapDiv.style.width = ancho + 'px';

                }

            }
            catch (ex) {
            }

        }
        fillWindow();
  
    </script>

